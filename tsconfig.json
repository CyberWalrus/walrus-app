{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "server_compiled",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2019",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@containers/*": ["./src/containers/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@stores/*": ["./src/stores/*"],
      "@custom-types/*": ["./src/custom-types/*"],
      "@utils/*": ["./src/utils/*"],
      "@src/*": ["./src/*"],
      "@build/*": ["./build/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "**/fixtures",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
